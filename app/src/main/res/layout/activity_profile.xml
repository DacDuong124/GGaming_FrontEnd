<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:layout_marginBottom="40dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profileTopBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:titleTextColor="@color/black">

                <ImageView
                    android:id="@+id/backActionIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/back_icon" />

                <TextView
                    android:id="@+id/profileActionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@color/queen_blue"
                    android:textSize="24dp"
                    android:textStyle="bold" />



            </androidx.appcompat.widget.Toolbar>

            <androidx.cardview.widget.CardView

                android:id="@+id/cardView"
                android:layout_width="182dp"
                android:layout_height="182dp"
                android:elevation="4dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/uranian_blue_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileTopBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/point_icon" />

                    <TextView
                        android:id="@+id/point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="200"
                        android:textAlignment="center"
                        android:textColor="@color/queen_blue"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Current Points"
                        android:textAlignment="center"
                        android:textColor="@color/rich_black"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/nameEditContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_bar"
                        android:layout_marginTop="16dp"
                        android:text="Name"
                        android:textColor="@color/grey_900"
                        android:textSize="14dp" />


                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <!-- Spacer -->

                    <TextView
                        android:id="@+id/nameEdit"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_bar"
                        android:layout_marginTop="16dp"
                        android:text="Edit"
                        android:textColor="@color/queen_blue"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <View
                    android:layout_marginTop="4dp"
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView"

                    android:background="@color/grey_900" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hoang Minh Quan"
                    android:textSize="20dp"
                    android:textColor="@color/rich_black"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ageEditContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/nameEditContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_bar"
                        android:text="Age"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/grey_900"
                        android:textSize="14dp"/>
                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <!-- Spacer -->

                    <TextView
                        android:id="@+id/ageEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_bar"
                        android:layout_marginTop="16dp"
                        android:text="Edit"
                        android:textColor="@color/queen_blue"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                </LinearLayout>



                <View
                    android:layout_marginTop="4dp"
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView"

                    android:background="@color/grey_900" />

                <TextView
                    android:id="@+id/userAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="20dp"
                    android:textColor="@color/rich_black"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/countryEditContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ageEditContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_bar"
                        android:text="Country"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/grey_900"
                        android:textSize="14dp"/>

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <!-- Spacer -->

                    <TextView
                        android:id="@+id/countryEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_bar"
                        android:text="Edit"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/queen_blue"
                        android:textSize="14dp"/>


                </LinearLayout>



                <View
                    android:layout_marginTop="4dp"
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView"

                    android:background="@color/grey_900" />

                <TextView
                    android:id="@+id/userCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USA"
                    android:textSize="20dp"
                    android:textColor="@color/rich_black"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/paymentEditContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/countryEditContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_bar"
                        android:text="Payment Cards"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/grey_900"
                        android:textSize="14dp"/>

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <!-- Spacer -->

                    <TextView
                        android:id="@+id/paymentAdd"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_bar"
                        android:text="Add"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/queen_blue"
                        android:textSize="14dp"/>


                </LinearLayout>



                <View
                    android:layout_marginTop="4dp"
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView"

                    android:background="@color/grey_900" />


                <!--        <ListView-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="match_parent"> -->
                <!--        -->
                <!--        -->
                <!--        </ListView>-->
                <TextView
                    android:id="@+id/paymentCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4716778919971315"
                    android:textSize="20dp"
                    android:textColor="@color/rich_black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/paymentCardType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visa"
                    android:textSize="20dp"
                    android:textColor="@color/rich_black"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/paymentEditContainer"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wish List"
                    android:textColor="@color/grey_900"
                    android:textSize="14dp"

                    />
                <View
                    android:layout_marginTop="4dp"
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    android:background="@color/grey_900" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listWishList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>