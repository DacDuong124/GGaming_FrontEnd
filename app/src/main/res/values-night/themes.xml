<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GGaming_FrontEnd" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/queen_blue</item>
        <item name="colorPrimaryVariant">@color/uranian_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/steel_teal</item>
        <item name="colorSecondaryVariant">@color/uranian_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">@color/white</item>
        <item name="color">@color/rich_black</item>
    </style>
</resources>